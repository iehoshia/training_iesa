<form cursor="name">
    <group id="template" col="6" colspan="4">
        <label name="company"/>
        <field name="company"/>
        <newline/>
        <separator id="template_line" colspan="6"/>
        <separator id="template" string="Asset Info" colspan="6"/>
        <label name="name"/>
        <field name="name"/>
        <label name="code"/>
        <field name="code"/>
        <label name="unit"/>
        <field name="unit"/>
        <label name="value"/>
        <field name="value"/>
        <label name="residual_value"/>
        <field name="residual_value"/>
        <newline/>
        <separator id="date_line" colspan="6"/>
        <separator id="date" string="Asset Date Depreciation" colspan="6"/>
        <label name="purchase_date"/>
        <field name="purchase_date"/>
        <label name="start_date"/>
        <field name="start_date"/>
        <label name="end_date"/>
        <field name="end_date"/>
        <label name="description"/>
        <field name="description"/>
    </group>
    <group id="account" col="4" colspan="6">
        <separator id="account_line" colspan="6"/>
        <separator id="account" string="Asset Account" colspan="4"/> 
        <label name="product_account"/>
        <field name="product_account" widget="selection"/>
        <label name="asset_account"/>
        <field name="asset_account"/>
        <!--
        <label name="account_journal"/>
        <field name="account_journal" widget="selection"/>-->
    </group>
    <group id="account_journal" col="6" colspan="6">
        <separator id="account_journal_line" colspan="6"/>
        <separator id="account_journal" string="Account Journal" colspan="6"/>
        <label name="cash_journal"/>
        <field name="cash_journal" widget="selection"/>
        <label name="ticket"/>
        <field name="ticket"/>
        <label name="receipt"/>
        <field name="receipt"/>
        <label name="party"/>
        <field name="party"/>
        <label name="purchase_account"/>
        <field name="purchase_account"/>
    </group>
</form> 